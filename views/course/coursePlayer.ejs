<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Satisfy&display=swap"
      rel="stylesheet" />
    <!-- font awasome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer" />
    <!-- bootstrap style link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous" />
    <!-- course player syle sheet -->
    <link rel="stylesheet" href="/css/coursePlayer.css" />
    <!-- title logo -->
    <link rel="icon" href="/pictures/zzl.png" />
    <!-- tab title -->
    <title>Zam Zam High School</title>
  </head>
  <body>
    <div class="main-container">
      <!-- side bar for drop down -->
      <div class="sideBar">
        <!-- top navigation for back -->
        <div class="top">
          <a href="/courses/10th">
            <p>&larr; Back to Subjects page</p>
          </a>
        </div>
        <!-- heading -->
        <div class="heading">
          <h2><%= subject %>, class <%= className %></h2>
        </div>
        <!-- dropDown for playlist -->
        <div class="dropdown">
          <ul class="list-group">
            <% if(subject == "Mathematics"){ %>
              <%- include("../includes/subjects/maths.ejs") %>
            <% } %>
            <% if(subject == "Biology"){ %>
              <%- include("../includes/subjects/biology.ejs") %>
            <% } %>
            <% if(subject == "Physics"){ %>
              <%- include("../includes/subjects/physics.ejs") %>
            <% } %>
          </ul>
        </div>
      </div>
      <!-- =================video goes here============================  -->
      <div class="embed-reponsive embed-reponsive-16by9 videoPlayer">
        
     <div id="player" class="embed-responsive-item vid-frame">
    </div>
       <!-- Custom Controls -->
       <div class="custom-controls">
         <button id="playPauseBtn">Play</button>
         <input type="range" id="progressRange" min="0" max="100" value="0" step="0.1" class="progress-bar">
         <button id="fullscreenBtn">Fullscreen</button>
        </div>

      </div>
    <!-- bootstrap js links -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"></script>

      <!-- iframe api link  -->
<script src="https://www.youtube.com/iframe_api"></script>

      <!-- link for jQuery used in js file -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <!-- js file link -->
      <script src="/js/videoPlayer.js"></script>
  </body>
</html>