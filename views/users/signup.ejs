<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- bootstrap style link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous" />
    <!-- link for signup-login -->
    <link rel="stylesheet" href="css/signup-login.css" />
    <!-- title logo -->
    <link rel="icon" href="pictures/zzl.png" />
    <!-- tab title -->
    <title>Zam Zam High School</title>
  </head>

  <body
    style="
      background-color: #ddf651;
      background-image: linear-gradient(132deg, #ddf651 0%, #16a085 100%);
    ">
    <!-- for flashing the message -->
    <%- include("../includes/flash.ejs") %>
    <div class="main-sign-login-div">
      <!-- form----------------------------- -->
      <div class="form-div">
        <form
          action="/signup"
          method="POST"
          novalidate
          class="needs-validation">
          <h1>SignUp</h1>
          <!-- for username -->
          <div class="mb-3">
            <lable for="username" class="form-lable">username</lable>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              required />
            <div class="valid-feedback">username Looks Good!!</div>
          </div>
          <!-- for email -->
          <div class="mb-3">
            <lable for="email" class="form-lable">Email</lable>
            <input
              name="email"
              id="email"
              type="email"
              class="form-control"
              required />
          </div>
          <!-- for classYear -->
          <div class="mb-3">
            <lable for="classYear" class="form-lable"
              >Class + Year (1024)</lable
            >
            <input
              name="classYear"
              id="classYear"
              type="number"
              class="form-control"
              required />
          </div>
          <!-- for password -->
          <div class="mb-3">
            <lable for="password" class="form-lable">Password</lable>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              required />
          </div>
          <button type="submit" class="btn btn-primary form-btn">Submit</button>
        </form>
      </div>
      <!-- illustration------------------------------------------- -->
      <div class="illustration">
        <img src="pictures/signup-login/signup.png" alt="login image" />
      </div>
    </div>

    <script src="js/script.js"></script>
  </body>
</html>
